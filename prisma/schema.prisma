// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id
  email    String  @unique
  name     String?
  password String
  rented   Car[]
}

model Car {
  id       String  @id
  model    String
  brand    String
  photo    String
  description String
  Renter   User?   @relation(fields: [renterId], references: [id])
  renterId String?
}
